<%= form_for [@train, @vagon] do |form| %>

  <%= render 'common/errors', resource: @vagon %>

  <div class="field">
    <%= form.label :vagon_id %>
    <%= form.number_field :vagon_id %>
  </div>

  <div class="field">
     <%= form.label :type %><br>
     <%= a = form.select :type, Vagon::TYPES %>
   </div>



  <div class="field">
    <%= form.label :places_up %>
    <%= form.number_field :places_up %>
  </div>

  <div class="field">
    <%= form.label :places_down %>
    <%= form.number_field :places_down %>
  </div>

  <div class="field">
    <%= form.label :side_places_down %>
    <%= form.number_field :side_places_down %>
  </div>

  <div class="field">
    <%= form.label :side_places_up %>
    <%= form.number_field :side_places_up %>
  </div>

  <div class="field">
    <%= form.label :sitting_places %>
    <%= form.number_field :sitting_places %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>
